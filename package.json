{
  "name": "angular2-simple-build",
  "version": "1.0.0",
  "description": "",
  "repository": {
    "url": "https://github.com/attilacsanyi/angular2-simple-build"
  },
  "main": "index.js",
  "scripts": {
    "typings": "typings install",
    "serve": "http-server . -p 5556",
    "postinstall": "npm run typings",
    "build-prod": "npm run test && tsc && browserify -s main app/main.js > app/bundle.js && npm run minify",
    "minify": "uglifyjs app/bundle.js --screw-ie8 --compress,warnings=false --mangle --output app/bundle.min.js",

    "tsc": "tsc",
    "tsc:w": "tsc -w",
    "lite": "lite-server",
    "start": "concurrently \"npm run tsc:w\" \"npm run lite\" ",
    "tdd": "tsc && concurrently \"tsc -w\" \"karma start karma.conf.js\"",
    "test": "tsc && karma start karma.conf.js --single-run"
  },
  "author": "Minko Gechev <mgechev@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@angular/common": "2.0.0-rc.4",
    "@angular/compiler": "2.0.0-rc.4",
    "@angular/core": "2.0.0-rc.4",
    "@angular/forms": "0.2.0",
    "@angular/http": "2.0.0-rc.4",
    "@angular/platform-browser": "2.0.0-rc.4",
    "@angular/platform-browser-dynamic": "2.0.0-rc.4",
    "@angular/router": "3.0.0-beta.2",
    "@angular/upgrade": "2.0.0-rc.4",

    "reflect-metadata": "0.1.3",
    "rxjs": "5.0.0-beta.6",
    "zone.js": "0.6.12",

    "angular2-in-memory-web-api": "0.0.14",

    "@ngrx/core": "1.0.0",
    "@ngrx/store-devtools": "2.0.0-beta.1",
    "@ngrx/store-log-monitor": "2.0.0-beta.1",
    "@ngrx/store": "2.0.1"
  },
  "devDependencies": {
    "browserify": "13.0.1",
    "http-server": "0.9.0",
    "uglifyjs": "2.4.10",

    "systemjs": "0.19.27",
    "core-js": "2.4.0",

    "concurrently": "2.2.0",
    "jasmine-core": "2.4.1",
    "karma": "0.13.22",
    "karma-chrome-launcher": "1.0.1",
    "karma-cli": "1.0.1",
    "karma-htmlfile-reporter": "0.3.4",
    "karma-jasmine": "1.0.2",
    "lite-server": "2.2.2",
    "typescript": "1.9.0-dev.20160625-1.0",
    "typings": "1.3.1"
  }
}

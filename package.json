{
  "name": "angular2-simple-build",
  "version": "1.0.0",
  "description": "",
  "repository": {
    "url": "https://github.com/attilacsanyi/angular2-simple-build"
  },
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rm -rf dist",
    "typings": "typings install",
    "serve": "http-server . -p 5556",
    "postinstall": "npm run typings",
    "build": "npm run clean && tsc",
    "build_prod": "npm run build && browserify -s main dist/main.js > dist/bundle.js && npm run minify",
    "minify": "uglifyjs dist/bundle.js --screw-ie8 --compress,warnings=false --mangle --output dist/bundle.min.js",
  },
  "author": "Minko Gechev <mgechev@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "browserify": "^13.0.1",
    "http-server": "^0.9.0",
    "typescript": "^1.9.0-dev.20160625-1.0",
    "typings": "1.0.4",
    "uglifyjs": "^2.4.10"
  },
  "dependencies": {
    "@angular/common": "2.0.0-rc.4",
    "@angular/compiler": "2.0.0-rc.4",
    "@angular/core": "2.0.0-rc.4",
    "@angular/forms": "0.2.0",
    "@angular/http": "2.0.0-rc.4",
    "@angular/platform-browser": "2.0.0-rc.4",
    "@angular/platform-browser-dynamic": "2.0.0-rc.4",
    "@angular/router": "3.0.0-beta.2",
    "@angular/router-deprecated": "2.0.0-rc.2",
    "@angular/upgrade": "2.0.0-rc.4",
    
    "es6-shim": "^0.35.1",
    "reflect-metadata": "^0.1.3",
    "rxjs": "5.0.0-beta.6",
    "zone.js": "^0.6.6"
  }
}
